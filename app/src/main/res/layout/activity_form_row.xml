<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    tools:context=".form_row">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="20dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars[3]" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imageView"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Empty"
            android:textColor="#FF1F1C1C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Region Empty"
            android:textColor="#FF1F1C1C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type Empty"
            android:textColor="#FF1F1C1C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_pon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pon Port Empty"
            android:textColor="#FF1F1C1C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Empty"
            android:textColor="#FF1F1C1C"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView_rfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RFO Empty"
            android:textColor="#FF1F1C1C"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>

</androidx.cardview.widget.CardView>